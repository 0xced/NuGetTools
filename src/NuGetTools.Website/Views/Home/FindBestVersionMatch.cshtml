@model FindBestVersionMatchOutput
@{
    ViewData["Title"] = "Find Best Version Match";
}

<h1>Find Best Version Match</h1>
<p>
    The find best match operation is what NuGet uses to select one version of a package from many available versions based on a version specification (version range).
    Enter a version range and one or more versions.
</p>

<form method="GET" action="">
    <div class="form-group">
        <label for="versionRange">Version Range</label>
        <input type="text" class="form-control" name="versionRange" id="versionRange"
               placeholder="[1.0.0, )" value="@Model.Input.VersionRange">
    </div>
    <div class="form-group">
        <label for="versions">Versions</label>
        <textarea class="form-control" rows="5" name="versions" id="versions" placeholder="1.1.0">@Model.Input.Versions</textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
</form>

<div class="results">
    @if (@Model.InputStatus == InputStatus.Valid)
    {
        if (@Model.BestMatch != null)
        {
            <div class="alert alert-success" role="alert">
                The <code>@Model.BestMatch.Version.ToNormalizedString()</code> (<b>@Model.BestMatch.Input</b>) version
                is the best match to the <code>@Model.VersionRange.ToNormalizedString()</code> (<b>@Model.Input.VersionRange</b>) version range.
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                None of the recognized versions satisfied the <code>@Model.VersionRange.ToNormalizedString()</code> (<b>@Model.Input.VersionRange</b>) version range.
            </div>
        }

        <div class="alert alert-info" role="alert">
            <p>The versions that were considered were:</p>
            <ul>
                @foreach (var input in Model.Versions)
                {
                    <li>
                        <code>@input.Version.ToNormalizedString()</code>
                        (<b>@input.Input</b>)
                    </li>
                }
            </ul>
            @if (Model.Invalid.Any())
            {
                <p>The following version(s) could not be parsed:</p>
                <ul>
                    @foreach (var invalid in Model.Invalid)
                    {
                        <li><b>@invalid</b></li>
                    }
                </ul>
            }
        </div>
    }
    else if (@Model.InputStatus == InputStatus.Invalid)
    {
        if (!@Model.IsVersionRangeValid)
        {
            <div class="alert alert-danger" role="alert">
                Version range <b>@Model.Input.VersionRange</b> could not be parsed.
            </div>
        }

        if (!@Model.IsVersionValid)
        {
            <div class="alert alert-danger" role="alert">
                <p>The following version(s) could not be parsed:</p>
                <ul>
                    @foreach (var invalid in Model.Invalid)
                    {
                        <li><b>@invalid</b></li>
                    }
                </ul>
            </div>
        }
    }
</div>
